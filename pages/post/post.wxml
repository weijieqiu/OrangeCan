<!--pages/post/post.wxml-->
<!--  Banner start -->
<view>
  <swiper vertical="{{false}}" indicator-dots="true" autoplay="true" interval="5000">
    <swiper-item>
      <image src="/images/post/post-1@text.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/post/post-2@text.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="/images/post/post-3@text.jpg"></image>
    </swiper-item>
  </swiper>
</view>
<!-- Banner end -->
<!-- post start -->
<block wx:for="{{postList}}" wx:for-item="item" wx:for-index="idx" wx:key="idx">
  <view class="post-container">
    <view class="post-author-date">
      <image src="{{item.avatar}}"/>
      <text>{{item.object.date}}</text>
    </view>
    <text class="post-title">{{item.title}}</text>
    <image class="post-image" src="{{item.postImg}}" mode="aspectFill"/>
    <text class="post-content">{{item.content}}</text>
    <view class="post-like">
      <image  src="/images/icon/wx_app_collect.png"/>
      <text>{{item.collectNum.array[0]}}</text>
      <image  src="/images/icon/wx_app_view.png"/>
      <text>{{item.readingNum}}</text>
      <image  src="/images/icon/wx_app_message.png"/>
      <text>{{item.commentNum}}</text>
    </view>
  </view>
</block>
<!-- post end -->
